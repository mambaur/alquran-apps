<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alquran_apps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2465007971338713~1472069040" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_key" />

        <activity
            android:theme="@style/BasicTheme"
            android:name=".activities.CovidActivity"/>

        <activity
            android:name=".activities.DonasiActivity"
            android:theme="@style/BasicTheme" />
        <activity
            android:name=".activities.WebViewActivity"
            android:theme="@style/BasicTheme" />
        <activity
            android:name=".activities.TafsirActivity"
            android:theme="@style/BasicTheme" />
        <activity
            android:name=".activities.DoaActivity"
            android:theme="@style/BasicTheme" />
        <activity
            android:name=".activities.DetailDoa"
            android:theme="@style/BasicTheme" />
        <activity
            android:name=".activities.MapsActivity"
            android:theme="@style/CompassTheme" />
        <activity
            android:name=".activities.CompassActivity"
            android:theme="@style/CompassTheme" />
        <activity
            android:name=".activities.DetailSurat"
            android:theme="@style/DetailSuratTheme" />
        <activity
            android:name=".activities.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service android:name=".fcm.FirebaseMessageReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>